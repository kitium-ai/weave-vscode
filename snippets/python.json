{
  "Weave Generate": {
    "prefix": "weave-generate",
    "body": [
      "from weave import Weave",
      "",
      "weave = await Weave.create_async(",
      "    provider={'type': '${1|openai,anthropic|}', 'api_key': os.getenv('${2:API_KEY}')}",
      ")",
      "",
      "result = await weave.generate('${3:Your prompt here}')",
      "print(result.data['text'])"
    ],
    "description": "Create a basic Weave generation operation in Python"
  },
  "Weave Classify": {
    "prefix": "weave-classify",
    "body": [
      "result = await weave.classify(",
      "    '${1:Text to classify}',",
      "    ['${2:label1}', '${3:label2}', '${4:label3}']",
      ")",
      "print(result['classification'])"
    ],
    "description": "Classify text using Weave in Python"
  },
  "Weave Extract": {
    "prefix": "weave-extract",
    "body": [
      "result = await weave.extract(",
      "    '${1:Text to extract from}',",
      "    {",
      "        'type': 'object',",
      "        'properties': {",
      "            '${2:field}': {'type': 'string'}",
      "        }",
      "    }",
      ")",
      "print(result['data'])"
    ],
    "description": "Extract structured data using Weave in Python"
  },
  "Weave with Caching": {
    "prefix": "weave-cache",
    "body": [
      "weave = await Weave.create_async(",
      "    provider={'type': '${1|openai,anthropic|}', 'api_key': os.getenv('${2:API_KEY}')},",
      "    cache={",
      "        'enabled': True,",
      "        'strategy': '${3|exact,semantic,fuzzy|}',",
      "        'ttl': ${4:3600}",
      "    }",
      ")",
      "",
      "result = await weave.generate('${5:Your prompt}')"
    ],
    "description": "Create Weave with caching enabled in Python"
  }
}
